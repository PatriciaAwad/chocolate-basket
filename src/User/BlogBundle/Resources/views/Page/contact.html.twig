{# src/User/BlogBundle/Resources/views/Page/contact.html.twig #}
{% extends 'UserBlogBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact Chocolate Basket</h1>
    </header>

    {% for flashMessage in app.session.flashbag.get('user-notice') %}
    <div class="user-notice">
        {{ flashMessage }}
    </div>
    {% endfor %}


    <p>Want to contact Chocolate Basket?</p>

    <form action="{{ path('UserBlogBundle_contact') }}" method="post" {{ form_enctype(form) }} class="user">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>
{% endblock %}